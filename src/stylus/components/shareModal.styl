@import '../base'

.modal-mask
  position fixed
  z-index 4000
  top 0
  left 0
  width 100%
  height 100%
  background-color rgba(0, 0, 0, .7)
  transition opacity .5s ease

.modal-wrapper
  margin-top 100px

.bg
  width 100%
  height 100%

.content
  position absolute
  width 100%
  font-size 60px
  color #fff
  text-align center
  bottom 50px

.modal-container
  position relative
  margin 0 100px
  transition all .5s ease

.modal-enter
  opacity 0
.modal-leave-active
  opacity 0
.modal-enter .modal-container,
.modal-leave-active .modal-container
  transform scale(1.1)
