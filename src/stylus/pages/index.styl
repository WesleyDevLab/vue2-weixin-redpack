@import "../base"

#header
  padding 45px 50px

#title
  font-size 60px
  height 60px
  line-height 60px
  color #000
  padding 20px 0px
  text-align left
  font-weight bold

#subTitle
  font-size 40px
  height 40px
  line-height 40px
  padding 20px 0px
  color #8c8c8c
  text-align left
  span
    padding-right 30px
    &:nth-child(3)
      color #617ea0

#number
  padding 10px 50px
  height 30px
  line-height 30px
  .font
    float left
    color #eaca1d
    font-size 30px
  div
    margin-left 20px
    width 30px
    height 30px
    float left
    &:nth-child(2)
      background-color: #edcd1a
    &:nth-child(3)
      background-color: #f3da5c
    &:nth-child(4)
      background-color: #f7e384
    &:nth-child(5)
      background-color: #f8efac

#body
  padding 50px 50px 150px
  color #777777
  font-size 46px
  #img
    border-radius 10px
    height 500px
    margin 60px auto
    background-color #edcd1a
    img
      width 100%
      height 500px
  #description
    margin 60px auto
    height auto
    line-height: 1.3
    span
      width 900px

#footer
  position fixed
  width 90%
  height 120px
  padding 30px 50px
  background-color #fff
  bottom 0
  text-align center

.button
  width 380px
  height 120px
  line-height 120px
  border-radius 5px
  background-color #ff4449
  color #fff
  font-size 60px
  text-align center
  margin auto
  &:active
    background-color #ff4449 * 0.8
    border 1px solid #ff4449 * 0.8
  &:hover
    background-color #ff4449 * 0.9
  span
    line-height 120px
    height 120px
    width 100%
